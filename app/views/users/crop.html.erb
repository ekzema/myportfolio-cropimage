<div class="page-header"></div>
<div class="formCrop">
  <%= form_for(@user) do |f| %>    
    <div class="landscape-crop-preview">    
      <%= f.crop_preview :avatar %>
    </div>
    <div class="landscape-crop-area">
      <%= f.cropbox :avatar, :width => 600 %>
    </div>
    <div class="clear"></div>
    <div class="actions">
      <%= f.submit 'Сохранить', class: "btn btn-success cropSubmit" %>
    </div>
  <% end %>
</div>